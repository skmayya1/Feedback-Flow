generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id            String   @id @default(cuid())
  kindeID       String  @unique
  email         String   @unique
  family_name   String?
  given_name    String?
  picture       String?
  feedback      feedback[]
}

model organization {
  id            String   @id @default(cuid())
  url           String   @unique
  email         String   @unique
  password      String
  image         String
  name          String
  avg_rating    Float    @default(0)
  categoryID    String
  category      category @relation(fields: [categoryID], references: [id])
}



model feedback {
  id            String   @id @default(cuid())
  ProductID     String
  CustomerID    String
  customer     user @relation(fields: [CustomerID], references: [id])
  Rating        Int
  Header        String
  Review        String
  sentiment     String
  upVotes       Int
  DownVotes     Int
  DateofExperience  DateTime
  DateofFeedback    DateTime
  created_at    DateTime @default(now())
}

model category {
  id            String   @id @default(cuid())
  name          String
  icon          String
  companies     organization[]
}